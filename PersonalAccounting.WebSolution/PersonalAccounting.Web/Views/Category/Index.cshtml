@model IEnumerable<PersonalAccounting.ViewModel.CategoryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}

<h2>Category List</h2>
<div class="row">
<div class="col-lg-4">
    <br />
    <h5>@Html.ActionLink("Create New", "Create")</h5>
</div>
    </div>

<div class="container con">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="bg">@Html.DisplayFor(modelItem => item.Name)<br />
                    <span class="top-right action">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class="fa fa-edit"})
                    </span>
                    <span class="top-right action">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
                    </span>
                </div>
            </div>
        }
    </div>
</div>